pragma solidity ^0.8.0;

contract InfiniteWisdom {
    // Stocker la distance entre la bêtise humaine et l'infini de l'univers
    string public constant distance = "Infinity";

    // Fonction humoristique qui retourne une déclaration symbolique
    function calculateDistance() public pure returns (string memory) {
        // La réponse philosophique à la question
        return "The distance between human stupidity and the infinity of the universe is immeasurable.";
    }

    // Fonction qui retourne une constante infinie (pour le fun)
    function getDistance() public pure returns (string memory) {
        return distance;
    }
}